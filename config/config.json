{
	'database': {
		'adapter': 'Mysql',
		'host': 'localhost',
		'username': 'root',
		'password': 'root',
		'name': 'ew'
	},
	
	'application': {
		'debug': true,
		'baseUri': '/',
		'defaultModule': 'frontend',
		'logger': {
				'enabled': true,
				'path': ROOT_APP . 'var' . SEP . 'logs' . SEP,
				'format': '[%date%][%type%] %message%',
				'adapter': 'File'
		},
		'views': {
			'compiledPath': ROOT_APP . 'var' . SEP . 'compiled' . SEP,
			'compiledExtension': '.compiled'
		},
		'cache': {
			'lifetime': '86400',
			'prefix': 'pe_',
			'adapter': 'Memcached'
		}
	},
	
	'modules': {
		'backend': {
			'namespaces': {
				'Ew\Backend\Controllers': ROOT_BACK . 'controllers' . SEP,
				'Ew\Backend\Models': ROOT_BACK . 'models' . SEP,
				'Ew\Backend': ROOT_BACK,
				'Ew\Lib': ROOT_APP . 'apps' . SEP . 'library'
			},
			'defaultNameSpace': 'Ew\Backend\Controllers', 
			'dirs': {
				'Views': ROOT_BACK . 'views' . SEP
			}
		},
				
		'frontend': {
			'namespaces': {
				'Ew\Frontend\Controllers': ROOT_FRONT . 'controllers' . SEP,
				'Ew\Frontend\Models': ROOT_FRONT . 'models' . SEP,
				'Ew\Frontend': ROOT_FRONT,						
				'Ew\Lib': ROOT_APP . 'apps' . SEP . 'library' . SEP
			},
			'defaultNameSpace': 'Ew\Frontend\Controllers',
			'dirs': {
				'Views': ROOT_FRONT . 'views' . SEP
			}
		}
	},
	
	'router': {
		'register': {
			'module': 'frontend',
			'controller': 'registration',
			'action': 'index'
		},
		'login': {
			'module': 'frontend'
			'controller': 'auth',
			'action': 'index'
		},
		'logout': {
			'module': 'frontend',
			'controller': 'auth',
			'action': 'logout'
		}
	}
}